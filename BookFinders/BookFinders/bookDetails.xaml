<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookFinders.bookDetails">
    <ContentPage.Content>

        <StackLayout Orientation="Vertical" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition  Width="2*" />
                </Grid.ColumnDefinitions>
                <Image x:Name="bookImage" Grid.Row ="0" Grid.Column="0" Aspect="AspectFit" WidthRequest="180" HeightRequest="120" HorizontalOptions="CenterAndExpand"></Image>
                <Label x:Name="bookName" Text="Hello" Grid.Row="0" Grid.Column="1" 
               />
                <Label x:Name="bookAuthor" Text="Hello" Grid.Row="0" Grid.Column="1" Margin="0,30,0,0"
                />
               
            </Grid>
            <Label Text="Description:" FontAttributes="Bold" TextColor="Black"
               />
            <Label x:Name="bookDesc" Text="Hello"
               />
            <Label Text="Location" FontAttributes="Bold" TextColor="Black"></Label>
            <StackLayout Orientation="Horizontal">
                <StackLayout Orientation="Vertical">
                    <Label Text="Available , Short term loan section"></Label>
                    <Label Text="QA76.73 .J38 M873 2014"></Label>
                </StackLayout>
                <Button Text="AR Mode"></Button>
        </StackLayout>

            <Label Text="Comment" FontAttributes="Bold" TextColor="Black"></Label>
            <StackLayout Padding="20" Orientation="Horizontal">
                <Editor x:Name="commentEditor"
                Placeholder="Enter your comment..."
                VerticalOptions="FillAndExpand" />
                <Button Text="Submit"
                HorizontalOptions="Center"
                VerticalOptions="End" 
                Clicked="PostComment"/>
                
            </StackLayout>
            <BoxView Color="Gray" HeightRequest="1" Margin="0,5,0,0" />

            <ListView x:Name="commentListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackLayout Orientation="Horizontal">
                                    <Button HeightRequest="35" WidthRequest="35" BackgroundColor="Transparent" 
                                    ImageSource="https://picsum.photos/200/300" 
                                    CornerRadius="25" 
                                    ></Button>
                                    <Label Text="{Binding UserName}" FontAttributes="Bold" />
                                </StackLayout>
                                <Label Grid.Row="1" Text="{Binding Description}" FontAttributes="Bold" TextColor="Black"/>
                                <Label Grid.Row="2" Text="{Binding postDateTime, StringFormat='{0:yyyy-MM-dd HH:mm:ss}'}" FontSize="Small" TextColor="Gray" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.SeparatorVisibility>
                    <OnPlatform x:TypeArguments="SeparatorVisibility">
                        <OnPlatform.iOS>Default</OnPlatform.iOS>
                        <OnPlatform.Android>Default</OnPlatform.Android>
                    </OnPlatform>
                </ListView.SeparatorVisibility>
                <ListView.HasUnevenRows>true</ListView.HasUnevenRows>
            </ListView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>