<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookFinders.Login">
    <ContentPage.Content>
        
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Label Text="Book Finders" TextColor="Black" HorizontalOptions="Center" FontSize="30" FontAttributes="Bold" ></Label>
            <Image Source="Logo.jpg" Margin="0,30,0,0"></Image>
            <Entry Placeholder="Username" TextColor="White" PlaceholderColor="Gray"></Entry>
            <Entry Placeholder="Password" TextColor="White" PlaceholderColor="Gray"></Entry>
            
            <Button
                
                Margin="0,30,0,0"
                VerticalOptions="Center"
                Text="Login"
                TextColor="Black"
                BackgroundColor="Transparent"
                BorderWidth="1.5"
                BorderColor="Black"
                CornerRadius="50"
                Clicked="login"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>